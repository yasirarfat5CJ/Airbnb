<% layout("/layouts/boilerplate")%>
    <div class="row mt-3">
        <h1 class="col-8 offset-3">SingUp on Wanderlust</h1>
        <div class="col-6 offset-3">

            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" id="username" name="username" placeholder="enter username" class="form-control"
                        required>
                    <div class="valid-feedback"> Looks good</div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" id="email" name="email" placeholder="enter email" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" id="email" name="password" placeholder="enter password" class="form-control"
                        required>
                </div>
                <button class="btn btn-success">Sign Up</button>

            </form>


        </div>
    </div>